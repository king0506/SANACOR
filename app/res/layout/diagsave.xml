<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="150pt"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">


        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Saving Data"
            android:textColor="#000"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:background="#8A4B4B4B"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text="GP"
                android:textColor="#fff" />

            <Spinner
                android:id="@+id/spinnerGPlist_"
                style="@android:style/Widget.Spinner.DropDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:drawable/btn_dropdown" />
            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text="Pond Title"
                android:textColor="#fff" />

            <Spinner
                android:id="@+id/spinner_title_list_"
                style="@android:style/Widget.Spinner.DropDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical">

            <TableLayout
                android:id="@+id/Tables"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="5dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:text="Temp"
                        android:textColor="#A7A7A7" />

                    <Space
                        android:layout_width="14dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:text="pH"
                        android:textColor="#A7A7A7" />

                    <Space
                        android:layout_width="14dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:text="Sal"
                        android:textColor="#A7A7A7" />

                    <Space
                        android:layout_width="14dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:text="Turb"
                        android:textColor="#A7A7A7" />

                    <Space
                        android:layout_width="14dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="97dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:text="Dis.Oxygen"
                        android:textColor="#A7A7A7" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/t1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="00.00"
                        android:textColor="#A7A7A7"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <Space
                        android:layout_width="14dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/t2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="00.00"
                        android:textColor="#A7A7A7"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <Space
                        android:layout_width="14dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/t3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="00.00"
                        android:textColor="#A7A7A7"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <Space
                        android:layout_width="14dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/t4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="00.00"
                        android:textColor="#A7A7A7"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <Space
                        android:layout_width="14dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/t5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="00.00"
                        android:textColor="#A7A7A7"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </TableRow>

            </TableLayout>

        </LinearLayout>

        <Button
            android:id="@+id/_save_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SAVE" />

        <Button
            android:id="@+id/_view_log_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Log" />

    </LinearLayout>
</LinearLayout>