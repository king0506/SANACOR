<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="._motor_control"
    android:background="#000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/btn_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center_horizontal|center_vertical"
                android:text="MOTOR CONTROL"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="119dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <TextView
                android:id="@+id/textView40"
                android:layout_width="117dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="MOTOR STATUS : "
                android:textColor="#DCFFFFFF"
                android:textSize="14sp" />

            <Switch
                android:id="@+id/mtr_Switch"
                android:layout_width="117dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Switch"
                android:textAlignment="center" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="35dp">

            <TextView
                android:layout_width="117dp"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="GP #  : "
                android:textAlignment="textEnd"
                android:textColor="#DCFFFFFF"
                android:textSize="14sp"
                tools:ignore="RtlCompat" />

            <Spinner
                android:id="@+id/spin_gps_listing"
                android:layout_width="117dp"
                android:layout_height="match_parent"
                android:background="#EBFFFFFF" />
        </TableRow>

        <Space
            android:layout_width="match_parent"
            android:layout_height="22dp" />

        <TextView
            android:id="@+id/textView45"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MOTOR SPEED :"
            android:textColor="#DCFFFFFF"
            android:textSize="18sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="22dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="75dp">

            <ImageView
                android:id="@+id/btn_down_speed"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_p_down" />

            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView47"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RPM"
                    android:textAlignment="center"
                    android:textColor="#DCFFFFFF"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/rmp_indect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="#DCFFFFFF"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/l1"
                        android:layout_width="11dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="invisible"
                        app:srcCompat="@drawable/l_loading_green_1" />

                    <ImageView
                        android:id="@+id/l2"
                        android:layout_width="11dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="invisible"
                        app:srcCompat="@drawable/l_loading_green_2" />

                    <ImageView
                        android:id="@+id/l3"
                        android:layout_width="11dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="invisible"
                        app:srcCompat="@drawable/l_loading_green_3" />

                    <ImageView
                        android:id="@+id/l4"
                        android:layout_width="11dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="invisible"
                        app:srcCompat="@drawable/l_loading_green_4" />

                    <ImageView
                        android:id="@+id/l5"
                        android:layout_width="11dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="invisible"
                        app:srcCompat="@drawable/l_loading_green_5" />

                    <ImageView
                        android:id="@+id/l6"
                        android:layout_width="11dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="invisible"
                        app:srcCompat="@drawable/l_loading_green_6" />

                    <ImageView
                        android:id="@+id/l7"
                        android:layout_width="11dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="invisible"
                        app:srcCompat="@drawable/l_loading_orange_1" />

                    <ImageView
                        android:id="@+id/l8"
                        android:layout_width="11dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="invisible"
                        app:srcCompat="@drawable/l_loading_orange_2" />

                    <ImageView
                        android:id="@+id/l9"
                        android:layout_width="11dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="invisible"
                        app:srcCompat="@drawable/l_loading_orange_3" />

                    <ImageView
                        android:id="@+id/l10"
                        android:layout_width="11dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="invisible"
                        app:srcCompat="@drawable/l_loading_orange_4" />

                    <ImageView
                        android:id="@+id/l11"
                        android:layout_width="11dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="invisible"
                        app:srcCompat="@drawable/l_loading_orange_5" />

                    <ImageView
                        android:id="@+id/l12"
                        android:layout_width="11dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="invisible"
                        app:srcCompat="@drawable/l_loading_orange_6" />

                    <ImageView
                        android:id="@+id/l13"
                        android:layout_width="11dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="invisible"
                        app:srcCompat="@drawable/l_loading_red_1" />

                    <ImageView
                        android:id="@+id/l14"
                        android:layout_width="11dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="invisible"
                        app:srcCompat="@drawable/l_loading_red_2" />

                    <ImageView
                        android:id="@+id/l15"
                        android:layout_width="11dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="invisible"
                        app:srcCompat="@drawable/l_loading_red_3" />

                    <ImageView
                        android:id="@+id/l16"
                        android:layout_width="11dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="invisible"
                        app:srcCompat="@drawable/l_loading_red_4" />

                    <ImageView
                        android:id="@+id/l17"
                        android:layout_width="11dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="invisible"
                        app:srcCompat="@drawable/l_loading_red_5" />

                    <ImageView
                        android:id="@+id/l18"
                        android:layout_width="11dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="invisible"
                        app:srcCompat="@drawable/l_loading_red_6" />

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/btn_up_speed"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_p_up" />

        </TableRow>

    </LinearLayout>
</RelativeLayout>